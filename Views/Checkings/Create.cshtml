@model BankEntities.Checking

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Checking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                
                <input hidden asp-for="type" class="form-control" value="checking" />
                
            </div>
            <div class="form-group">
                
                <input hidden asp-for="CustomerId" class="form-control" value="2" />
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <input hidden asp-for="InterestRate" class="form-control" value="2.2" />
                <span asp-validation-for="InterestRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Balance" class="control-label">How much would you like to deposit into this account?</label>
                <input asp-for="Balance" class="form-control" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
